#include<bits/stdc++.h>
#define pb push_back
#define ll long long 
using namespace std;
int main()
    {
  
         ll t; cin>>t ;    
        while(t--){
    	ll ans(0);
        ll x,y;
        cin>>x>>y;
        while(x>0 or y>0)
        {
         if(y>=2)
        { x-=7 ; y-=2; ans++;}
        else if(y==1) 
        { x-=11 ; y-=1; ans++;}
        else 
        {x-=15; ans++;} }
        cout<<ans<<endl;
        
        }    
        

        
        
}        
        
